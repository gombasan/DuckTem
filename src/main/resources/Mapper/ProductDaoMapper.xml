<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ducktem.web.dao.ProductDao">
    <insert id="save" parameterType="com.ducktem.web.entity.Product" useGeneratedKeys="true" keyProperty="id">

        INSERT INTO `ducktemdb`.`Product` (`price`, `description`, `name`, `regMemberId`, `categoryId`,`condition`,`deliveryType`)
        VALUES (#{price}, #{description} , #{name}, #{regMemberId}, #{categoryId}, #{condition},#{deliveryType});

    </insert>
    
    <select id="findId" resultType="Long">
        select last_insert_id() `Product`;
    </select>

    <select id="getPreviewAll" resultType="com.ducktem.web.entity.ProductPreview">
		select * from ProductPreview
        order by regDate desc ;
    </select>

    <select id="findById" resultType="com.ducktem.web.entity.Product" parameterType="Long">
        select * from Product where id = #{productId};

    </select>

    <select id="findMemberProductList" resultType="com.ducktem.web.entity.ProductPreview">
        select * from ProductPreview
        where regMemberId = #{memberId}
        order by regDate desc;
    </select>

    <update id="plusHit" parameterType="Long">
        update Product set hit = hit+1 where id = #{productId};

    </update>

    <select id="getPreviewList" resultType="com.ducktem.web.entity.ProductPreview" parameterType="Int">
        select * from ProductPreview
        order by regDate desc LIMIT #{size} OFFSET #{offset};
    </select>

    <update id="update" parameterType="com.ducktem.web.entity.Product">
        update Product
            <set>
                <if test="name != null">name = #{name},</if>
                <if test="price != null">price = #{price},</if>
                <if test="description != null">description = #{description},</if>
                <if test="condition != null">Product.condition = #{condition},</if>
                <if test="deliveryType != null">deliveryType = #{deliveryType},</if>
                <if test="salesStatusId != null">salesStatusId = #{salesStatusId}</if>
            </set>
        where id = #{id}
    </update>
</mapper>