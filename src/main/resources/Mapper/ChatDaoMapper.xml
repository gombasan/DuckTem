<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ducktem.web.dao.ChatDao">
    <insert id="save" parameterType="Chat">
        INSERT INTO Chat (chatRoomId, content)
        VALUES (#{chatRoomId}, #{content});
    </insert>

    <select id="findByChatRoomId" resultType="Chat">
        select * from Chat where chatRoomId = #{chatRoomId};
    </select>
</mapper>